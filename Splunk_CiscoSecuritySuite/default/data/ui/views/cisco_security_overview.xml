<dashboard onUnloadCancelJobs="true">
	<label>Cisco Security Overview</label>
	<description>Your dashboard for all things Cisco... Security.</description>

	<row>
		<map>
			<title>Global Security Events</title>
			<searchName>Cisco Security Suite - Overview - Global Security Events Map</searchName>
			<option name="mapping.markerLayer.markerOpacity">0.8</option>
			<option name="mapping.markerLayer.markerMinSize">10</option>
			<option name="mapping.markerLayer.markerMaxSize">50</option>
			<option name="mapping.map.zoom">2</option>
		</map>
		<chart>
			<title>Top Threats</title>
			<searchName>Cisco Security Suite - Overview - Top Threats</searchName>
			<option name="charting.chart">pie</option>
			<option name="charting.legend.labelSyle.overflowMode">ellipsisMiddle</option>
			<option name="chartting.legend.placement">right</option>
			<option name="height">400px</option>
		</chart>
	</row>

	<row>
		<chart>
			<title>Top Sources</title>
			<searchName>Cisco Security Suite - Overview - Top Sources</searchName>
			<option name="charting.chart">pie</option>
			<option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
			<option name="charting.legend.placement">right</option>
		</chart>
		<chart>
			<title>Top Destinations</title>
			<searchName>Cisco Security Suite - Overview - Top Destinations</searchName>
			<option name="charting.chart">pie</option>
			<option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
			<option name="charting.legend.placement">right</option>
		</chart>
		<chart>
			<title>Top Services</title>
			<searchName>Cisco Security Suite - Overview - Top Services</searchName>
			<option name="charting.chart">pie</option>
			<option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
			<option name="charting.legend.placement">right</option>
		</chart>
	</row>

	<row>
		<table>
			<title>Security Event Statistics by Sourcetype</title>
			<searchName>Cisco Security Suite - Overview - Security Event Stats by Sourcetype</searchName>
			<option name="rowNumbers">true</option>
			<option name="dataOverlayMode">heatmap</option>
			<option name="count">10</option>
			<format tyep="sparkline" field="Trend">
				<option name="type">bar</option>
				<option name="height">50px</option>
				<option name="barWidth">5px</option>
				<option name="colorMap">
					<option name="2000:">#5379AF</option>
					<option name=":1999">#9AC23C</option>
				</option>
			</format>
		</table>
		<table>
			<title>Security Event Statistics by Host</title>
			<searchName>Cisco Security Suite - Overview - Security Event Stats by Host</searchName>
			<option name="rowNumbers">true</option>
			<option name="dataOverlayMode">heatmap</option>
			<option name="count">10</option>
			<format tyep="sparkline" field="Trend">
				<option name="type">bar</option>
				<option name="height">50px</option>
				<option name="barWidth">5px</option>
				<option name="colorMap">
					<option name="2000:">#5379AF</option>
					<option name=":1999">#9AC23C</option>
				</option>
			</format>
		</table>
	</row>
</dashboard>
