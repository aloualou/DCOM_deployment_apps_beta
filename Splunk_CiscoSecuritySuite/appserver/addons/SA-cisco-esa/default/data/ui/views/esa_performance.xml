<dashboard stylesheet="application.css">
	<label>Mail Gateway Performance</label>

	<row>
		<chart>
			<title>Injections (ICIDs)</title>
			<searchName>Cisco ESA - Performance - Injections</searchName>
			<option name="charting.chart">area</option>
			<option name="charting.chart.nullValueMode">zero</option>
			<option name="charting.chart.stackMode">stacked</option>
			<option name="charting.axisTitleX.visibility">collapsed</option>
			<drilldown>
				<link><![CDATA[esa_search?form.host=$click.name2$&earliest=$earliest$&latest=$latest$]]></link>
			</drilldown>
		</chart>
		<chart>
			<title>Messages (MIDs)</title>
			<searchName>Cisco ESA - Performance - Messages</searchName>
			<option name="charting.chart">area</option>
			<option name="charting.chart.nullValueMode">zero</option>
			<option name="charting.chart.stackMode">stacked</option>
			<option name="charting.axisTitleX.visibility">collapsed</option>
			<drilldown>
				<link><![CDATA[esa_search?form.host=$click.name2$&earliest=$earliest$&latest=$latest$]]></link>
			</drilldown>
		</chart>
		<chart>
			<title>Deliveries (DCIDs)</title>
			<searchName>Cisco ESA - Performance - Deliveries</searchName>
			<option name="charting.chart">area</option>
			<option name="charting.chart.nullValueMode">zero</option>
			<option name="charting.chart.stackMode">stacked</option>
			<option name="charting.axisTitleX.visibility">collapsed</option>
			<drilldown>
				<link><![CDATA[esa_search?form.host=$click.name2$&earliest=$earliest$&latest=$latest$]]></link>
			</drilldown>
		</chart>
	</row>
	<row>
		<chart>
			<title>Average Message Size</title>
			<searchName>Cisco ESA - Performance - Message Size</searchName>
			<option name="charting.chart">area</option>
			<option name="charting.chart.nullValueMode">zero</option>
			<option name="charting.axisTitleY.text">Avg Message Size (MB)</option>
			<option name="charting.axisTitleX.visibility">collapsed</option>
			<drilldown>
				<link><![CDATA[esa_search?earliest=$earliest$&latest=$latest$]]></link>
			</drilldown>
		</chart>
		<chart>
			<title>Message Size Distribution</title>
			<searchName>Cisco ESA - Performance - Message Size Distribution</searchName>
			<option name="charting.chart">bar</option>
			<option name="charting.chart.nullValueMode">zero</option>
		</chart>
	</row>
</dashboard>
